	<Target Name="Setup MIDI Services SDK Reference"
			BeforeTargets="BeforeBuild;BeforeResolveReferences">

		<ItemGroup Label="CopyMidiServicesSDKReferenceFiles">
			<Reference Include="$(MSBuildThisFileDirectory)..\..\ref\native\Microsoft.Windows.Devices.Midi2.Messages.winmd">
				<!-- <Implementation>Microsoft.Devices.Midi2.dll</Implementation> --> <!-- Impl must already be installed on PC -->
			</Reference>
		</ItemGroup>

		<ItemGroup>
			<None Include="@(MidiNativeLibs)">
				<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
				<Link>%(Filename)%(Extension)</Link>
			</None>
		</ItemGroup>

	</Target>

