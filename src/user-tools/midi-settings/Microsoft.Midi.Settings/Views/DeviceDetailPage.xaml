<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Microsoft.Midi.Settings.Views.DeviceDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.Midi.Settings.Views"
    xmlns:vm="using:Microsoft.Midi.Settings.ViewModels"
    xmlns:midi2="using:Microsoft.Windows.Devices.Midi2"
    xmlns:midi2Config="using:Microsoft.Windows.Devices.Midi2.ServiceConfig"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:helpers="using:Microsoft.Midi.Settings.Helpers"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" x:Name="HeaderGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- When customization is available, the image is a button -->
            <Button Grid.Column="0"
                    Margin="0,0,16,16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Visibility="{x:Bind ViewModel.ShowCustomizeButton, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Click="Button_Click">
                <Image Source="{x:Bind ViewModel.EndpointWrapper.Image}"
                       Stretch="Uniform"
                       />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Change image" />
                </ToolTipService.ToolTip>
            </Button>

            <!-- Image for when customization is not available -->
            <Image Grid.Column="0"
                   Margin="0,0,16,16"
                   Stretch="Uniform" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Visibility="{x:Bind ViewModel.ShowCustomizeButton, Mode=OneWay, Converter={StaticResource BooleanToInverseVisibilityConverter}}"
                   Source="{x:Bind ViewModel.EndpointWrapper.Image}"/>

            <Grid Grid.Column="1" RowSpacing="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           HorizontalAlignment="Left"
                           Text="{x:Bind ViewModel.Name, Mode=OneWay}" 
                           Style="{StaticResource PageHeaderStyleDeviceName}" />

                <TextBlock Grid.Row="1" 
                           HorizontalAlignment="Left"
                           Margin="0"
                           Text="{x:Bind ViewModel.Description, Mode=OneWay}" 
                           Style="{StaticResource SmallPlainPropertyValueWithWrap}"
                           Opacity="0.5"/>

                <Button Grid.Row="2"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Padding="0"
                        Foreground="{StaticResource AccentTextFillColorPrimaryBrush}"
                        Background="Transparent"
                        Click="Button_Click"
                        Visibility="{x:Bind ViewModel.ShowCustomizeButton, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Content="Customize">
                    
                    <ToolTipService.ToolTip>
                        <TextBlock Text="Rename endpoint, update description and other properties." />
                    </ToolTipService.ToolTip>
                </Button>


            </Grid>
            
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" 
                           x:Uid="DeviceDetailPage_NativeDataFormat"
                           Style="{StaticResource SmallPropertyLabel}" />
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind ViewModel.TransportSuppliedInfo.NativeDataFormat, Mode=OneWay, Converter={StaticResource EndpointNativeDataFormatConverter} }" 
                           Style="{StaticResource SmallEmphasizedPropertyValue}" />

                <TextBlock Grid.Column="0" Grid.Row="1" 
                           x:Uid="DeviceDetailPage_TransportCode"
                           Style="{StaticResource SmallPropertyLabel}" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind ViewModel.TransportSuppliedInfo.TransportCode, Mode=OneWay }" 
                           Style="{StaticResource SmallEmphasizedPropertyValue}" />


                <TextBlock Grid.Column="0" Grid.Row="2" 
                           x:Uid="DeviceDetailPage_ManufacturerLabel"
                           Style="{StaticResource SmallPropertyLabel}" 
                           Visibility="{x:Bind ViewModel.EndpointWrapper.HasManufacturerName, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind ViewModel.TransportSuppliedInfo.ManufacturerName, Mode=OneWay}" 
                           Style="{StaticResource SmallEmphasizedPropertyValue}"
                           Visibility="{x:Bind ViewModel.EndpointWrapper.HasManufacturerName, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Grid.Column="0" Grid.Row="3" 
                           x:Uid="DeviceDetailPage_ProductInstanceId"
                           Style="{StaticResource SmallPropertyLabel}" 
                           Visibility="{x:Bind ViewModel.ShowMidi2Properties, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{x:Bind ViewModel.EndpointInfo.ProductInstanceId }" 
                           Style="{StaticResource SmallEmphasizedPropertyValue}" 
                           Visibility="{x:Bind ViewModel.ShowMidi2Properties, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBlock Grid.Column="0" Grid.Row="4" 
                           x:Uid="DeviceDetailPage_UsbVidPid"
                           Style="{StaticResource SmallPropertyLabel}" 
                           Visibility="{x:Bind ViewModel.EndpointWrapper.HasUsbVidPid, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Grid.Column="1" Grid.Row="4"
                           Style="{StaticResource SmallEmphasizedPropertyValue}"
                           Visibility="{x:Bind ViewModel.EndpointWrapper.HasUsbVidPid, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Run Text="{x:Bind ViewModel.EndpointWrapper.UsbVendorIdFormatted, Mode=OneWay }" />
                    <Run Text="/" />
                    <Run Text="{x:Bind ViewModel.EndpointWrapper.UsbProductIdFormatted, Mode=OneWay }" />
                </TextBlock>


                <TextBlock Grid.Column="0" Grid.Row="5" 
                           x:Uid="DeviceDetailPage_SerialNumber"
                           Style="{StaticResource SmallPropertyLabel}"
                           Visibility="{x:Bind ViewModel.EndpointWrapper.HasUniqueIdentifier, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Grid.Column="1" Grid.Row="5" Text="{x:Bind ViewModel.TransportSuppliedInfo.SerialNumber, Mode=OneWay }" 
                           Style="{StaticResource SmallEmphasizedPropertyValue}"
                           Visibility="{x:Bind ViewModel.EndpointWrapper.HasUniqueIdentifier, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                

            </Grid>
            
        </Grid>

        <!-- TODO: Show active groups summary at top -->
        
        <ScrollViewer Grid.Row="1" x:Name="ContentControl" Margin="0,13,0,0">
            <StackPanel Orientation="Vertical" Spacing="4">

                <CommandBar HorizontalAlignment="Left"
                            IsOpen="False"
                            DefaultLabelPosition="Right"
                            IsDynamicOverflowEnabled="False"
                            >
                    <CommandBar.PrimaryCommands>
                        <AppBarButton Content="Monitor" />
                        <AppBarButton Content="Send SysEx" />
                        <AppBarSeparator />
                        <AppBarButton Content="Troubleshoot" />
                        <AppBarButton Content="Panic" />
                    </CommandBar.PrimaryCommands>
                </CommandBar>

                <controls:SettingsCard Margin="0,16,0,0"
                                       CornerRadius="8">
                    <controls:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0">
                            <TextBlock Text="Endpoint Device Id: "
                                       Margin="4"
                                       Style="{StaticResource SmallPropertyLabel}"/>
                            <TextBlock Text="{x:Bind ViewModel.EndpointWrapper.Id}" 
                                       TextWrapping="NoWrap" 
                                       Style="{StaticResource SmallEmphasizedPropertyValueNoTrim}"
                                       Margin="4"
                                       IsTextSelectionEnabled="True" />
                            <Button Margin="4,0,4,0"
                                    Padding="4"
                                    Background="Transparent"
                                    Command="{x:Bind ViewModel.CopyEndpointDeviceIdCommand}">
                                <FontIcon Glyph="&#xE8C8;" FontSize="10"/>
                                <!-- Copy -->
                            </Button>

                        </StackPanel>
                    </controls:SettingsCard.Header>
                </controls:SettingsCard>


                
                
                
                <!-- Associated MIDI 1.0 Ports -->
                <TextBlock Text="Associated MIDI 1.0 Ports" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />


                <!-- Source/Input ports -->
                <controls:SettingsExpander IsExpanded="False"
                                           x:Uid="DeviceDetailPage_Midi1SourcePortsExpander"
                                           CornerRadius="8"
                                           ItemsSource="{x:Bind ViewModel.EndpointWrapper.Midi1InputPorts, Mode=OneWay}"
                                           >
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8BC;" 
                                  Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>

                    <controls:SettingsExpander.Header>
                        <Grid HorizontalAlignment="Stretch" Width="400">
                            <TextBlock Text="Source/Input Ports"
                                       HorizontalAlignment="Left"/>

                            <TextBlock HorizontalAlignment="Right">
                                <Run Text="{x:Bind ViewModel.EndpointWrapper.CountMidi1OutputPorts, Mode=OneWay}" 
                                     Foreground="{StaticResource AccentTextFillColorPrimaryBrush}"/>
                                <Run Text="Port(s)" />
                            </TextBlock>
                        </Grid>
                    </controls:SettingsExpander.Header>

                    <controls:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="midi2:MidiEndpointAssociatedPortDeviceInformation">
                            <controls:SettingsCard>
                                <controls:SettingsCard.Header>
                                    <TextBlock Text="{x:Bind PortName}" />
                                </controls:SettingsCard.Header>

                                <controls:SettingsCard.Content>
                                    <Grid>
                                        <Grid Grid.Column="0" Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" 
                                                   Text="Port Number" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                   Text="{x:Bind PortNumber }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="1" 
                                                   Text="WinRT Id" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="1" 
                                                   Text="{x:Bind PortDeviceId }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                   Text="Mapped Group"
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="2" 
                                                   Text="{x:Bind Group.DisplayValue}" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="3" 
                                                   Text="Flow" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="3" 
                                                   Text="{x:Bind PortFlow }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                        </Grid>
                                    </Grid>
                                </controls:SettingsCard.Content>
                            </controls:SettingsCard>
                        </DataTemplate>
                        
                    </controls:SettingsExpander.ItemTemplate>
                </controls:SettingsExpander>

                <!-- Destination/Output ports -->
                <controls:SettingsExpander IsExpanded="False"
                                           x:Uid="DeviceDetailPage_Midi1DestinationPortsExpander"
                                           CornerRadius="8"
                                           ItemsSource="{x:Bind ViewModel.EndpointWrapper.Midi1OutputPorts, Mode=OneWay}"
                                           >
                    <controls:SettingsExpander.Header>
                        <Grid HorizontalAlignment="Stretch" Width="400">
                            <TextBlock Text="Destination/Output Ports"
                                       HorizontalAlignment="Left"/>
                            
                            <TextBlock HorizontalAlignment="Right">
                                <Run Text="{x:Bind ViewModel.EndpointWrapper.CountMidi1OutputPorts, Mode=OneWay}" 
                                     Foreground="{StaticResource AccentTextFillColorPrimaryBrush}"/>
                                <Run Text="Port(s)" />
                            </TextBlock>
                        </Grid>
                    </controls:SettingsExpander.Header>
                    
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8BC;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>

                    <controls:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="midi2:MidiEndpointAssociatedPortDeviceInformation">
                            <controls:SettingsCard>
                                <controls:SettingsCard.Header>
                                    <TextBlock Text="{x:Bind PortName}" />
                                </controls:SettingsCard.Header>

                                <controls:SettingsCard.Content>
                                    <Grid>
                                        <Grid Grid.Column="0" Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" 
                                                   Text="Port Number" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                   Text="{x:Bind PortNumber, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="1" 
                                                   Text="WinRT Id" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="1" 
                                                   Text="{x:Bind PortDeviceId, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                   Text="Mapped Group"
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="2" 
                                                   Text="{x:Bind Group.DisplayValue, Mode=OneTime}" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="3" 
                                                   Text="Flow" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="3" 
                                                   Text="{x:Bind PortFlow, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                        </Grid>
                                    </Grid>
                                </controls:SettingsCard.Content>
                            </controls:SettingsCard>
                        </DataTemplate>

                    </controls:SettingsExpander.ItemTemplate>
                </controls:SettingsExpander>


                <TextBlock Text="General" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <!-- User-supplied / Custom information -->
                
                <!--<controls:SettingsExpander Header="Personalization"
                                           IsExpanded="False"
                                           x:Uid="DeviceDetailPage_PersonalizationExpander"
                                           CornerRadius="8"
                                           >
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe771;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Style="{StaticResource SmallPropertyLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description" Style="{StaticResource SmallPropertyLabel}"/>
