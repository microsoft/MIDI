                <!-- Information from the transport -->

                <controls:SettingsExpander x:Uid="DeviceDetailPage_TransportExpander"
                                           CornerRadius="8"
                                           IsExpanded="False">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe95a;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Name" Style="{StaticResource SmallPropertyLabel}"/>
                                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind ViewModel.TransportSuppliedInfo.Name, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Description" Style="{StaticResource SmallPropertyLabel}"/>
                                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind ViewModel.TransportSuppliedInfo.Description, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Serial Number" Style="{StaticResource SmallPropertyLabel}"/>
                                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind ViewModel.TransportSuppliedInfo.SerialNumber, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>


                                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Transport Id" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="3" Text="{x:Bind ViewModel.TransportSuppliedInfo.TransportId, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="4" Text="Transport Code" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="4" Text="{x:Bind ViewModel.TransportSuppliedInfo.TransportCode, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                </Grid>
                            </controls:SettingsCard.Header>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>


                <!-- UMP/MIDI 2.0 device protocol info -->

                <controls:SettingsExpander 
                    x:Uid="DeviceDetailPage_Midi2ProtocolExpander"
                    CornerRadius="8"
                    IsExpanded="False"
                    Visibility="{x:Bind ViewModel.ShowMidi2Properties, Converter={StaticResource BoolToVisibilityConverter}}"
                    >
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xebde;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Supports MIDI 1.0 Protocol" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind ViewModel.EndpointInfo.SupportsMidi10Protocol, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Supports MIDI 2.0 Protocol" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind ViewModel.EndpointInfo.SupportsMidi20Protocol, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Configured Protocol" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind ViewModel.StreamConfiguration.Protocol, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Configured to send Jitter Reduction Timestamps" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="3" Text="{x:Bind ViewModel.StreamConfiguration.SendJitterReductionTimestamps, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="4" Text="Configured to receive Jitter Reduction Timestamps" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="4" Text="{x:Bind ViewModel.StreamConfiguration.ReceiveJitterReductionTimestamps, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                </Grid>
                            </controls:SettingsCard.Header>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>


                <!-- Function Blocks -->
                <controls:SettingsExpander x:Uid="DeviceDetailPage_FunctionBlocksExpander"
                                           ItemsSource="{x:Bind ViewModel.FunctionBlocks, Mode=OneWay}"
                                           CornerRadius="8"
                                           Visibility="{x:Bind ViewModel.HasFunctionBlocks, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                           IsExpanded="False">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xeb41;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="midi2:MidiFunctionBlock">
                            <controls:SettingsCard>
                                <controls:SettingsCard.Header>
                                    <TextBlock Text="{x:Bind Name}" />
                                </controls:SettingsCard.Header>

                                <controls:SettingsCard.Content>
                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>


                                        <Grid Grid.Column="0" Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" 
                                                   Text="Number" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                   Text="{x:Bind Number, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="1" 
                                                   Text="Active?" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="1" 
                                                   Text="{x:Bind IsActive, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                   Text="First Group"
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="2" 
                                                   Text="{x:Bind FirstGroup.DisplayValue, Mode=OneTime}" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="3" 
                                                   Text="Group Count" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="3" 
                                                   Text="{x:Bind GroupCount, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="4" 
                                                   Text="Max System Exclusive 8 Streams" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="4" 
                                                   Text="{x:Bind MaxSystemExclusive8Streams, Mode=OneTime, Converter={StaticResource MidiFunctionBlockSysEx8FormatConverter}}" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />
                                        </Grid>

                                        <Grid Grid.Column="1" Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>


                                            <TextBlock Grid.Column="0" Grid.Row="0" 
                                                       Text="Direction" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                       Text="{x:Bind Direction, Mode=OneTime, Converter={StaticResource MidiFunctionBlockDirectionConverter} }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="1" 
                                                       Text="UI Hint" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="1" 
                                                       Text="{x:Bind UIHint, Mode=OneTime, Converter={StaticResource MidiFunctionBlockUIHintConverter} }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                       Text="MIDI 1.0" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="2" 
                                                       Text="{x:Bind RepresentsMidi10Connection, Mode=OneTime, Converter={StaticResource MidiFunctionBlockMidi10Converter} }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="3" 
                                                       Text="MIDI CI" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="3" 
                                                       Text="{x:Bind MidiCIMessageVersionFormat, Mode=OneTime }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />


                                        </Grid>
                                            
                                    </Grid>
                                </controls:SettingsCard.Content>
                            </controls:SettingsCard>
                        </DataTemplate>
                    </controls:SettingsExpander.ItemTemplate>
                </controls:SettingsExpander>

                <!-- Group Terminal Blocks -->
                <controls:SettingsExpander x:Uid="DeviceDetailPage_GroupTerminalBlocksExpander"
                                           ItemsSource="{x:Bind ViewModel.GroupTerminalBlocks, Mode=OneWay}"
                                           CornerRadius="8"
                                           Visibility="{x:Bind ViewModel.ShowGroupTerminalBlocks, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                           IsExpanded="False">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xeb41;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="midi2:MidiGroupTerminalBlock">
                            <controls:SettingsCard>
                                <controls:SettingsCard.HeaderIcon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind Direction, Mode=OneTime, Converter={StaticResource MidiGroupTerminalBlockDirectionToFontIconConverter}}" Style="{StaticResource CommonTasksIconStyles}"/>
                                </controls:SettingsCard.HeaderIcon>
                                <controls:SettingsCard.Header>
                                    <TextBlock Text="{x:Bind Name}" />
                                </controls:SettingsCard.Header>

                                <controls:SettingsCard.Content>
                                    <Grid Width="600">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>


                                        <Grid Grid.Column="0" Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" 
                                                   Text="Number" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                   Text="{x:Bind Number, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                   Text="First Group"
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="2" 
                                                   Text="{x:Bind FirstGroup.DisplayValue, Mode=OneTime}" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="3" 
                                                   Text="Group Count" 
                                                   Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="3" 
                                                   Text="{x:Bind GroupCount, Mode=OneTime }" 
                                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                        </Grid>

                                        <Grid Grid.Column="1" Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>


                                            <TextBlock Grid.Column="0" Grid.Row="0" 
                                                       Text="Direction" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                       Text="{x:Bind Direction, Mode=OneTime, Converter={StaticResource MidiGroupTerminalBlockDirectionConverter} }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                       Text="Max Device Input Bandwidth (bps)" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="2" 
                                                       Text="{x:Bind CalculatedMaxDeviceInputBandwidthBitsPerSecond, Mode=OneTime }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                            <TextBlock Grid.Column="0" Grid.Row="3" 
                                                       Text="Max Device Output Bandwidth (bps)" 
                                                       Style="{StaticResource SmallPropertyLabel}" />
                                            <TextBlock Grid.Column="1" Grid.Row="3" 
                                                       Text="{x:Bind CalculatedMaxDeviceOutputBandwidthBitsPerSecond, Mode=OneTime }" 
                                                       Style="{StaticResource SmallEmphasizedPropertyValue}" />


                                        </Grid>

                                    </Grid>
                                </controls:SettingsCard.Content>
                            </controls:SettingsCard>
                        </DataTemplate>
                    </controls:SettingsExpander.ItemTemplate>
                </controls:SettingsExpander>

                <!-- Parent Device -->

                <controls:SettingsExpander x:Uid="DeviceDetailPage_ParentDeviceExpander"
                                           IsExpanded="False" 
                                           Margin="0,0,0,20"
                                           CornerRadius="8"
                    Visibility="{x:Bind ViewModel.HasParent, Converter={StaticResource BoolToVisibilityConverter}}">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe70c;" Style="{StaticResource CommonTasksIconStyles}"/>
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Name" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind ViewModel.ParentDeviceInformation.Name, Mode=OneWay}" Style="{StaticResource SmallEmphasizedPropertyValue}" />

                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Id" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind ViewModel.ParentDeviceInformation.Id, Mode=OneWay}"  Style="{StaticResource SmallPlainPropertyValue}"/>

                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Kind" Style="{StaticResource SmallPropertyLabel}" />
                                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind ViewModel.ParentDeviceInformation.Kind, Mode=OneWay}" Style="{StaticResource SmallPlainPropertyValue}"/>

                                </Grid>
                            </controls:SettingsCard.Header>
                            
                            <StackPanel>
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                

            </StackPanel>
           
        </ScrollViewer>
        

        <ContentDialog x:Name="editUserDefinedPropertiesDialog"
                       PrimaryButtonText="OK" 
                       IsPrimaryButtonEnabled="True"
                       CloseButtonText="Cancel"
                       PrimaryButtonCommand="{x:Bind ViewModel.SubmitEndpointCustomizationCommand}"
                       >
            <ContentDialog.Resources>
                <x:Double x:Key="ContentDialogMaxWidth">1300</x:Double>
                <x:Double x:Key="ContentDialogMaxHeight">850</x:Double>
            </ContentDialog.Resources>
            
            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Personalize MIDI Endpoint" />

                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>

            <Grid Margin="0,16,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Top Row: Title etc -->

                <Grid Grid.Row="0" 
                      RowSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Spacing="16">
                        <TextBlock Text="{x:Bind ViewModel.EndpointWrapper.Name, Mode=OneWay}" 
                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                        <TextBlock Text="{x:Bind ViewModel.EndpointWrapper.Id, Mode=OneWay}" 
                                   Style="{StaticResource SmallPlainPropertyValue}" />
                    </StackPanel>

                    <TextBlock Grid.Row="1" 
                               Text="{x:Bind ViewModel.EndpointWrapper.Description, Mode=OneWay}" 
                               Opacity="0.75"
                               Style="{StaticResource SmallPlainPropertyValue}" />


                    <Rectangle Grid.Row="2" 
                               Height="4"
                               HorizontalAlignment="Stretch"
                               RadiusX="2"
                               RadiusY="2"
                               Opacity="0.75"
                               Fill="{StaticResource SmokeFillColorDefault}"
                               Margin="0,8,0,8"/>
                </Grid>
                
                <!-- Second row: content -->
                <Grid Grid.Row="1" 
                      Margin="0,16,0,0"
                      ColumnSpacing="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" />
                        <ColumnDefinition Width="Auto" MinWidth="400" />
                    </Grid.ColumnDefinitions>

                    <!-- Column 1 : Name, description, image -->

                    <Grid Grid.Column="0" RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Style="{StaticResource DialogHeaderTextBlockStyle}"
                                   Text="Main Endpoint Properties" />

                        <TextBox Grid.Row="1" 
                                 Header="Name"
                                 HorizontalAlignment="Stretch"
                                 Text="{x:Bind ViewModel.CustomizationViewModel.CustomName, Mode=TwoWay}" />

                        <TextBox Grid.Row="2" 
                                 Header="Description"
                                 TextWrapping="Wrap"
                                 Height="100"
                                 IsSpellCheckEnabled="True"
                                 Text="{x:Bind ViewModel.CustomizationViewModel.CustomDescription, Mode=TwoWay}"/>

                        <TextBlock Grid.Row="3" 
                                   Text="Image (Click/Tap to Browse)" />
                        
                        <Button Grid.Row="4"
                                Click="BrowseImage_Click"
                                Width="175"
                                Height="175"
                                HorizontalAlignment="Left">
                            <Image Grid.Row="1"
                                   Stretch="Uniform"
                                   x:Name="UserMetadataImagePreview" />
                        </Button>

                        <TextBlock Grid.Row="5"
                                   Text="{x:Bind ViewModel.CustomizationViewModel.ImageFileName, Mode=TwoWay}"
                                   Style="{StaticResource SmallEmphasizedPropertyValue}" />

                    </Grid>


                    <!-- Column 2 : Default MIDI 1.0 naming approach, and port names -->
                    <Grid Grid.Column="1" RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Style="{StaticResource DialogHeaderTextBlockStyle}" 
                                   Text="MIDI 1.0 Ports"/>

                        <!-- TODO: Bind this to viewmodel values -->
                        <ComboBox Grid.Row="1" 
                                  HorizontalAlignment="Left"
                                  Header="Default MIDI 1 Port Naming"
                                  ItemsSource="{x:Bind ViewModel.CustomizationViewModel.Midi1PortNamingOptions, Mode=OneWay}"
                                  SelectedItem="{x:Bind ViewModel.CustomizationViewModel.Midi1PortNaming, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="midi2:Midi1PortNamingApproach">
                                    <TextBlock Text="{Binding Converter={StaticResource Midi1PortNamingApproachConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>



                        <ScrollViewer Grid.Row="2" 
                                      VerticalScrollMode="Auto">

                            <ScrollViewer.Resources>
                                <DataTemplate x:Key="Midi1PortCustomizationTemplate" 
                                              x:DataType="vm:MidiEndpointMidi1PortCustomizationViewModel">
                                    <Grid Margin="4" ColumnSpacing="16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="250" />
                                            <ColumnDefinition Width="250" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{x:Bind Group, Mode=OneWay}" 
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{x:Bind CurrentDisplayName, Mode=OneWay}" 
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBox Grid.Column="2"
                                                 MaxLength="32"
                                                 HorizontalAlignment="Stretch" 
                                                 Text="{x:Bind NewCustomName, Mode=TwoWay}" />
                                    </Grid>

                                </DataTemplate>
                            </ScrollViewer.Resources>
                            
                            <!-- TODO: This needs to bind to a type that has a field for custom name -->
                            <StackPanel Orientation="Vertical" Spacing="8">
                                <TextBlock Text="MIDI 1.0 Sources/Inputs" />
                                <ItemsControl ItemsSource="{x:Bind ViewModel.CustomizationViewModel.Midi1SourcePorts, Mode=OneWay}"
                                              ItemTemplate="{StaticResource Midi1PortCustomizationTemplate}">
                                </ItemsControl>
                                
                                <TextBlock Text="MIDI 1.0 Destinations/Outputs" />
                                <ItemsControl ItemsSource="{x:Bind ViewModel.CustomizationViewModel.Midi1DestinationPorts, Mode=OneWay}"
                                              ItemTemplate="{StaticResource Midi1PortCustomizationTemplate}">
                                </ItemsControl>
                            </StackPanel>
                            
                        </ScrollViewer>


                    </Grid>

                </Grid>


            </Grid>
            
            
            
 
        </ContentDialog>


    </Grid>
</Page>
