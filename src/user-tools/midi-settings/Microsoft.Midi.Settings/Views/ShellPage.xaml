                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="Shell_GlobalMidiSettings" 
                                    helpers:NavigationHelper.NavigateTo="Microsoft.Midi.Settings.ViewModels.GlobalMidiSettingsViewModel"
                                    >
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="/Assets/LeftNav-GlobalSettings.svg"  />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>



                <NavigationViewItemHeader x:Uid="Shell_ConfigureTransportsNavHeader" 
